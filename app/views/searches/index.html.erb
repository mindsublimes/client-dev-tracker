<% if @results.any? %>
  <% @results.each do |result| %>
    <a href="<%= result[:url] %>" class="search-result-item">
      <div class="d-flex align-items-start gap-2" style="width: 100%;">
        <i class="bi <%= result[:icon] %> text-muted flex-shrink-0" style="font-size: 1.1rem; width: 20px; margin-top: 0.125rem;"></i>
        <div class="flex-grow-1" style="min-width: 0; width: 100%; display: flex; flex-direction: column;">
          <div class="fw-semibold" style="word-break: break-word; overflow-wrap: break-word; line-height: 1.4; white-space: normal; display: block; width: 100%;"><%= result[:title] %></div>
          <div class="text-muted small" style="word-break: break-word; overflow-wrap: break-word; line-height: 1.3; margin-top: 0.25rem; white-space: normal; display: block; width: 100%;"><%= result[:subtitle] %></div>
        </div>
      </div>
    </a>
  <% end %>
<% else %>
  <div class="search-result-item text-muted text-center py-3">
    <div class="small">No results found</div>
  </div>
<% end %>

