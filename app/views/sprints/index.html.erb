<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-0">Sprints</h1>
    <p class="text-muted mb-0">Manage sprint goals across all projects.</p>
  </div>
  <% if policy(Sprint).new? %>
    <%= link_to 'New sprint', new_sprint_path, class: 'btn btn-new-agenda' %>
  <% end %>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <%= form_with url: sprints_path, method: :get, scope: :filters, class: 'row g-3 align-items-end', html: { data: { auto_submit: true } } do |form| %>
      <div class="col-md-4">
        <%= form.label :search, 'Keyword', class: 'form-label' %>
        <%= form.text_field :search, value: @filters[:search], class: 'form-control', placeholder: 'Search sprint or goal...' %>
      </div>
      <% if @clients.many? %>
        <div class="col-md-4">
          <%= form.label :client_id, 'Client', class: 'form-label' %>
          <% client_options = [['All clients', nil]] + @clients.map { |client| [client.name, client.id] } %>
          <%= form.select :client_id, options_for_select(client_options, @filters[:client_id]), {}, class: 'form-select' %>
        </div>
      <% end %>
      <% if @projects_filter.any? %>
        <div class="col-md-4">
          <%= form.label :project_id, 'Project', class: 'form-label' %>
          <% project_options = [['All projects', nil]] + @projects_filter.map { |project| [project.name, project.id] } %>
          <%= form.select :project_id, options_for_select(project_options, @filters[:project_id]), {}, class: 'form-select' %>
        </div>
      <% end %>
      <div class="col-md-4"></div>
    <% end %>
  </div>
</div>

<% if @sprints.any? %>
  <div class="table-responsive shadow-sm rounded-3">
    <table class="table align-middle mb-0 agenda-table">
      <thead class="agenda-table-header">
        <tr>
          <th scope="col">Sprint</th>
          <th scope="col">Project</th>
          <th scope="col">Timeline</th>
          <th scope="col">Goal</th>
          <th scope="col">Tasks</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @sprints.each do |sprint| %>
          <tr>
            <td class="table-cell-small fw-semibold"><%= sprint.name %></td>
            <td class="table-cell-small"><%= sprint.project.name %></td>
            <td class="table-cell-small">
              <%= sprint.start_date&.strftime('%b %d') || 'TBD' %> -
              <%= sprint.end_date&.strftime('%b %d') || 'TBD' %>
            </td>
            <td class="table-cell-small text-muted"><%= truncate(sprint.goal.to_s, length: 60) %></td>
            <td class="table-cell-small"><%= sprint.agenda_items.count %></td>
            <td class="text-end">
              <div class="d-flex justify-content-end gap-2">
                <%= link_to 'View', sprint_path(sprint), class: 'btn btn-outline-secondary btn-sm' %>
                <% if policy(sprint).edit? %>
                  <%= link_to 'Edit', edit_sprint_path(sprint), class: 'btn btn-outline-dark btn-sm' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">No sprints have been created yet.</div>
<% end %>
