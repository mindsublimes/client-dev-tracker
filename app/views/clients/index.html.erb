<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-0">Clients</h1>
    <p class="text-muted mb-0">Monitor health and active agenda items per client.</p>
  </div>
  <% if policy(Client).new? %>
    <%= link_to 'New client', new_client_path, class: 'btn btn-new-agenda' %>
  <% end %>
</div>

<div class="row g-4">
  <% @clients.each do |client| %>
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm border-0 h-100 client-card">
        <div class="card-header bg-white section-header">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="card-title mb-0"><%= link_to client.name, client_path(client), class: 'text-decoration-none client-name-link' %></h5>
              <p class="text-muted small mb-0"><%= client.priority_level.titleize %> - <%= client.status.titleize %></p>
            </div>
            <span class="badge client-code-badge">Code: <%= client.code %></span>
          </div>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <div class="text-muted small">Primary contact</div>
            <div class="fw-semibold"><%= client.contact_name.presence || 'Not set' %></div>
            <div class="small text-muted"><%= client.contact_email %></div>
          </div>
          <div class="d-flex gap-4">
            <div>
              <div class="text-muted small">Active items</div>
              <div class="h5 mb-0"><%= client.agenda_items.pending.count %></div>
            </div>
            <div>
              <div class="text-muted small">Urgent</div>
              <div class="h5 mb-0 text-danger"><%= client.agenda_items.where(priority_level: :urgent).count %></div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2">
          <%= link_to 'View', client_path(client), class: 'btn btn-outline-dark btn-sm client-action-btn' if policy(client).show? %>
          <% if policy(client).edit? %>
            <%= link_to 'Edit', edit_client_path(client), class: 'btn btn-new-agenda btn-sm client-action-btn' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
