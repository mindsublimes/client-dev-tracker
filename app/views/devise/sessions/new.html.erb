<div class="row justify-content-center mt-5">
  <div class="col-md-5">
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <h2 class="h4 text-center mb-4">Welcome back</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>
          <%= f.submit 'Sign in', class: 'btn btn-primary w-100' %>
        <% end %>
      </div>
      <div class="card-footer bg-white border-0 text-center">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
