<% if user_signed_in? %>
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-content">
      <nav class="sidebar-nav">
        <ul class="sidebar-menu">
          <li class="sidebar-item">
            <%= link_to dashboard_path, class: "sidebar-link #{'active' if current_page?(dashboard_path)}" do %>
              <i class="bi bi-speedometer2"></i>
              <span>Dashboard</span>
            <% end %>
          </li>

          <li class="sidebar-item">
            <%= link_to agenda_items_path, class: "sidebar-link #{'active' if request.path.start_with?('/agenda_items')}" do %>
              <i class="bi bi-list-check"></i>
              <span>Agenda</span>
            <% end %>
          </li>

          <% unless current_user.client? %>
            <li class="sidebar-item">
              <%= link_to clients_path, class: "sidebar-link #{'active' if request.path.start_with?('/clients')}" do %>
                <i class="bi bi-people"></i>
                <span>Clients</span>
              <% end %>
            </li>
          <% end %>

          <% if policy(Project).index? %>
            <li class="sidebar-item">
              <%= link_to projects_path, class: "sidebar-link #{'active' if request.path.start_with?('/projects')}" do %>
                <i class="bi bi-kanban"></i>
                <span>Projects</span>
              <% end %>
            </li>
          <% end %>

          <% if current_user.internal_role? %>
            <li class="sidebar-item">
              <%= link_to sprints_path, class: "sidebar-link #{'active' if request.path.start_with?('/sprints')}" do %>
                <i class="bi bi-lightning-charge"></i>
                <span>Sprints</span>
              <% end %>
            </li>
          <% end %>

          <% if policy(User).index? %>
            <li class="sidebar-item">
              <%= link_to admin_users_path, class: "sidebar-link #{'active' if request.path.start_with?('/admin/users')}" do %>
                <i class="bi bi-person-lines-fill"></i>
                <span>Users</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </aside>

  <div class="sidebar-overlay d-lg-none" id="sidebarOverlay"></div>
<% end %>