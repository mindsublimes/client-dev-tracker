<!DOCTYPE html>
<html>
  <head>
    <title>DevTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-body-tertiary">
    <nav class="navbar navbar-expand-lg navbar-dark bg-navy shadow-sm">
      <div class="container-fluid">
        <a class="navbar-brand fw-semibold" href="<%= user_signed_in? ? dashboard_path : root_path %>">DevTracker</a>
        <button class="navbar-toggler" type="button" data-toggle="nav" data-target="#primaryNav" aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="primaryNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to 'Dashboard', dashboard_path, class: nav_link_class(dashboard_path) %></li>
              <li class="nav-item"><%= link_to 'Agenda', agenda_items_path, class: nav_link_class(agenda_items_path) %></li>
              <li class="nav-item"><%= link_to 'Clients', clients_path, class: nav_link_class(clients_path) %></li>
            <% end %>
          </ul>
          <div class="d-flex align-items-center gap-3 text-white">
            <% if user_signed_in? %>
              <div class="text-end">
                <div class="small text-uppercase opacity-75">Signed in as</div>
                <div class="fw-semibold"><%= current_user.full_name.presence || current_user.email %></div>
              </div>
              <%= button_to 'Sign out', destroy_user_session_path, method: :delete, form: { class: 'd-inline' }, class: 'btn btn-outline-light btn-sm' %>
            <% else %>
              <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-outline-light btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <main class="container py-4">
      <%= render 'shared/flash' %>
      <%= yield %>
    </main>
  </body>
</html>
