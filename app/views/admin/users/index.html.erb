<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-0">Users</h1>
    <p class="text-muted mb-0">Manage internal team members and client contacts.</p>
  </div>
  <% if policy(User).new? %>
    <%= link_to 'New user', new_admin_user_path, class: 'btn btn-new-agenda' %>
  <% end %>
</div>

<% if @users.any? %>
  <div class="table-responsive shadow-sm rounded-3">
    <table class="table align-middle mb-0 agenda-table">
      <thead class="agenda-table-header">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Role</th>
          <th scope="col">Client</th>
          <th scope="col">Status</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="table-cell-small">
              <div class="fw-semibold"><%= user.full_name.presence || user.email %></div>
              <div class="small text-muted"><%= user.email %></div>
            </td>
            <td class="table-cell-small">
              <span class="badge bg-light text-dark text-uppercase"><%= user.display_role %></span>
            </td>
            <td class="table-cell-small">
              <% if user.client.present? %>
                <% if policy(user.client).show? %>
                  <%= link_to user.client.name, client_path(user.client), class: 'text-decoration-none agenda-title-link' %>
                <% else %>
                  <span class="fw-semibold"><%= user.client.name %></span>
                <% end %>
              <% else %>
                <span class="text-muted">â€”</span>
              <% end %>
            </td>
            <td>
              <% if user.active? %>
                <span class="badge bg-success-subtle text-success">Active</span>
              <% else %>
                <span class="badge bg-secondary">Inactive</span>
              <% end %>
            </td>
            <td class="text-end">
              <% if policy(user).edit? %>
                <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-outline-secondary btn-sm' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">No users found.</div>
<% end %>
