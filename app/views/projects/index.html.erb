<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-0">Projects</h1>
    <% if current_user.client? %>
      <p class="text-muted mb-0">You can view the projects associated with your organization.</p>
    <% else %>
      <p class="text-muted mb-0">Track client initiatives and their sprint progress.</p>
    <% end %>
  </div>
  <% if policy(Project).new? %>
    <%= link_to 'New project', new_project_path, class: 'btn btn-new-agenda' %>
  <% end %>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <%= form_with url: projects_path, method: :get, scope: :filters, class: 'row g-3 align-items-end', html: { data: { auto_submit: true } } do |form| %>
      <div class="col-md-4">
        <%= form.label :search, 'Keyword', class: 'form-label' %>
        <%= form.text_field :search, value: @filters[:search], class: 'form-control', placeholder: 'Search name or description' %>
      </div>
      <% if @clients.many? %>
        <div class="col-md-4">
          <%= form.label :client_id, 'Client', class: 'form-label' %>
          <% client_options = [['All clients', nil]] + @clients.map { |client| [client.name, client.id] } %>
          <%= form.select :client_id, options_for_select(client_options, @filters[:client_id]), {}, class: 'form-select' %>
        </div>
      <% end %>
      <div class="col-md-4"></div>
    <% end %>
  </div>
</div>

<% if @projects.any? %>
  <div class="table-responsive shadow-sm rounded-3">
    <table class="table align-middle mb-0 agenda-table">
      <thead class="agenda-table-header">
        <tr>
          <th scope="col">Project</th>
          <th scope="col">Client</th>
          <th scope="col">Timeline</th>
          <th scope="col">Active tasks</th>
          <th scope="col">Sprints</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td class="table-cell-small">
              <div class="fw-semibold"><%= project.name %></div>
              <div class="small text-muted"><%= truncate(project.description.to_s, length: 60) %></div>
            </td>
          <td class="table-cell-small"><%= project.client.name %></td>
            <td class="table-cell-small">
              <%= project.start_date&.strftime('%b %d, %Y') || 'TBD' %> -
              <%= project.end_date&.strftime('%b %d, %Y') || 'TBD' %>
            </td>
            <td class="table-cell-small"><%= project.agenda_items.pending.count %></td>
            <td class="table-cell-small"><%= project.sprints.count %></td>
            <td class="text-end">
              <div class="d-flex justify-content-end gap-2">
                <%= link_to 'View', project_path(project), class: 'btn btn-outline-secondary btn-sm' %>
                <% if policy(project).edit? %>
                  <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-outline-dark btn-sm' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">No projects have been created yet.</div>
<% end %>
